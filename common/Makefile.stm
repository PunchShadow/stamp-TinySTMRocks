# ==============================================================================
# Variables
# ==============================================================================

CFLAGS   += -DSTM -I$(STM)/include -I$(STM)/concurrentqueue/c_api
CPPFLAGS := $(CFLAGS)
LDFLAGS  += -L$(STM)/lib
LDFLAGS  += -L$(STM)/pcm # PCM integral
LDFLAGS  += -L$(STM)/concurrentqueue/c_api # ctq
LIBS     += -lstm
LIBS     += -lPCM
LIBS	 += -lctq
# PCM wrapper
PCMLIBS += wrapper.o cpucounters.o pci.o mmio.o client_bw.o utils.o topology.o
PCMLIBS += dashboard.o debug.o threadpool.o resctrl.o msr.o -lrt



# ==============================================================================
# Rules
# ==============================================================================

.PHONY: default
default: $(PROG)

.PHONY: clean
clean:
	$(RM) $(OBJS) $(PROG) $(OUTPUT)

$(PROG): $(OBJS)
	$(LD) $(LDFLAGS) $^ $(LIBS) -o $(PROG).stm

include ../common/Makefile.common


# ==============================================================================
#
# End of Makefile.stm
#
# ==============================================================================
